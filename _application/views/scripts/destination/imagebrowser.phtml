          function format(obj)
          {
                temp = obj.attr('src');
                var patharr = temp.split('/');
                thumbidx = patharr.length-1;
                patharr.splice(thumbidx-1,1);
                temp = '';
                for(x in patharr)
                {
                  if(x==0)
                  {
                    temp = patharr[x];
                  }
                  else
                  {
                     temp = temp + '/' + patharr[x];
                  }
                }
                return temp;
          }
</script>

