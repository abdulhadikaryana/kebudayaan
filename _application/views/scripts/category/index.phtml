                    </div>

                    <div class="child-desc">

                        <h4><a href="<?php echo $this->baseUrl('/activity/detail/') . $child['category_id'] ?>"><?php echo $child['name'] ?></a></h4>

                        <?php echo $this->truncate($child['description'], 100) ?>

                        <div class="read-more-activity"><a href="<?php echo $this->baseUrl('/activity/detail/') . $child['category_id'] ?>"><?php echo $this->translate('read_more') ?> &gt;&gt;</a></div>

                    </div>

                </div>

