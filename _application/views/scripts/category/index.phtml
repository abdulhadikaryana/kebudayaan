

<div id="activity-content">

    <div id="breadcrumb">

        <?php echo $this->breadcrumb() ?>

    </div>

    <h2><?php echo $this->translate('id_menu_activity_things') ?></h2>



    <?php foreach($this->activities as $activity) : ?>

