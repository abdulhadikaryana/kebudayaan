    function filterSwitch(value)
    {

        switch (value)
        {
            case "0":
                hideAllFilter();
                break;
            case "1":
                hideAllFilter();
                $('.name-box').fadeIn('slow');
                $('.filter-btn').fadeIn('slow');
                break;
            case "2":
                hideAllFilter();
                $('.status-box').fadeIn('slow');
                $('.filter-btn').fadeIn('slow');
                break;
            case "3":
                hideAllFilter();
                $('.subject-box').fadeIn('slow');
                $('.filter-btn').fadeIn('slow');
                break;
            case "4":
                hideAllFilter();
                $('.flag-box').fadeIn('slow');
                $('.filter-btn').fadeIn('slow');
                break;
            case "5":
                hideAllFilter();
                $('.country').fadeIn('slow');
                $('.filter-btn').fadeIn('slow');
                break;
        }
    }

    function hideAllFilter()
    {
        $('.name-box').hide();
        $('.status-box').hide();
        $('.subject-box').hide();
        $('.flag-box').hide();
        $('.country').hide();
    }

    function getAllCheckBoxes(elform, elname) {
        var hasil = Array();
        var n = 0;
        for (var i = 0; i < elform.elements.length; i++) {
            if (elform.elements[i].type == 'checkbox' && elform.elements[i].name == elname) {
                hasil[n++] = elform.elements[i];
            }
        }
        return hasil;
    }

    var checkedAll = false;
    var chk = getAllCheckBoxes(document.contact, 'contact_item[]');

    function checkBoxAll() {
        if (!checkedAll) {
            checkedAll = true;
            for (i = 0; i < chk.length; i++)
                chk[i].checked = true;
        } else {
            checkedAll = false;
            for (i = 0; i < chk.length; i++)
                chk[i].checked = false;
        }
    }

    $(function()
    {
        $('.filter-panel').show();
    });

</script>
