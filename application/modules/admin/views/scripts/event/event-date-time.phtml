        <?php else: ?>
            <span class="event-date">
                <b><?php echo $this->translate('start') ?></b>: <?php echo $dateStart ?>
            </span>

            <span class="event-date">
                <b><?php echo $this->translate('until2') ?></b>: <?php echo $dateEnd ?>
