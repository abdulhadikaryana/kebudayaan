<div class="row">
  <div class="twelve column">
    <div class="panel" style="margin: 0;">
      <h5>Hasil</h5>
      <h6><?php echo $this->polling->question; ?></h6>
      <ul>
        <?php foreach ($this->answers->toArray() as $key => $answer): ?>
          <?php
          $percent = round($answer['percent']);
          $class   = '';
          if ($percent <= 10) {
            $class = 'alert';
          } else if ($percent <= 30) {
            $class = 'secondary';
          } else if ($percent <= 50) {
            $class = 'primary';
          } else if ($percent > 50) {
            $class = 'success';
          }
          ?>
          <li>
            <?php echo $answer['answer']; ?>
            <div class="progress <?php echo $class ?>">
              <div class="meter"
                   style="width: <?php echo $answer['percent'] ?>">
                <p align="center"><?php echo round($answer['percent']) . '%' ?></p>
              </div>
            </div>
          </li>
        <?php endforeach; ?>
      </ul>
    </div>
  </div>
</div>